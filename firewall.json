{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetName": {
            "type": "Array"
        },
        "subnetName":{
            "type": "Array"
        },
        "Firewall": {
            "type": "Array",
            "defaultValue" : [
                {
                    "firewallName" : "azfirewall",
                    "firewallLocation" : "eastus",
                    "firewallCondition" : true,
                    "pipTags": {
                        "Environment": "Dev",
                        "Owner"      : "Jake"
                    },
                    "firewallTags": {
                        "Environment": "Dev",
                        "Owner"      : "Jake"
                    }
                }
            ]
        }
       
    },
    "variables": {},
    "resources": 
    [   
        {
            "apiVersion" : "2020-11-01",
            "type"       : "Microsoft.Network/publicIPAddresses",
            "copy"       : 
            {
             "name"      : "PIP",
             "count"     : "[length(parameters('Firewall'))]",
             "mode"      : "Serial"
            },
            "condition"     : "[parameters('Firewall')[copyIndex('PIP')].firewallCondition]",
            "name"       : "[concat(parameters('Firewall')[copyIndex('PIP')].firewallName,'-pip')]",
            "location"   : "[parameters('Firewall')[copyIndex('PIP')].firewallLocation]",
            "tags"       : "[parameters('Firewall')[copyIndex('PIP')].firewallTags]",
            "sku"        : 
            {
                "name" : "Standard"
            },
            "properties" : 
            {
                "publicIPAllocationMethod": "Static",
                "idleTimeoutInMinutes": 10,
                "publicIPAddressVersion": "IPv4"

            }
        },
        {
            "type"      : "Microsoft.Network/azureFirewalls",
            "apiVersion": "2020-11-01",
            "copy"      : 
            {
             "name"     : "Firewall",
             "count"    : "[length(parameters('Firewall'))]",
             "mode"     : "Serial"
            },
            "condition" : "[parameters('Firewall')[copyIndex('Firewall')].firewallCondition]",
            "name"      : "[parameters('Firewall')[copyIndex('Firewall')].firewallName]",
            "location"  : "[parameters('Firewall')[copyIndex('Firewall')].firewallLocation]",
            "tags"      : "[parameters('Firewall')[copyIndex('Firewall')].firewallTags]",
            "dependsOn" : 
            [
                "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('Firewall')[copyIndex('Firewall')].firewallName,'-pip'))]"
            ],
            "properties":
            {
                "threatIntelMode": "Alert",
                "sku": 
                {
                    "name": "AZFW_VNet",
                    "tier": "Standard"
                },
                "ipConfigurations":
                [
                    {
                        "name"      : "[concat(parameters('Firewall')[copyIndex('Firewall')].firewallName,'-ipconf')]",
                        "properties": 
                        {
                            "publicIPAddress": 
                            {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('Firewall')[copyIndex('Firewall')].firewallName,'-pip'))]"
                            },
                            "subnet": 
                            {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetName'))]"
                            }
                        }
                    }
                ],
                "networkRuleCollections": [],
                "applicationRuleCollections": [],
                "natRuleCollections":[]
            }
        }
    ]
}