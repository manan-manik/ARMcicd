{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VNet_Name": {
            "type": "String",
            "defaultValue": "Vnet1"
        },
        "Subnets": {
            "type": "array",
            "defaultValue": [
                {
                            "subnetName"         : "Subnet1",
                            "subnetCondition"    : true,
                            "subnetAddressPrefix": "10.0.0.0/24",
                            "firewall"           : [],
                            "virtualmachine"     : []
                        }
            ]
        }
    },
    "variables": {},
    "resources": [
        {
            "type"      : "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-11-01",
            "copy"      : 
            {
             "name"     : "Subnets",
             "count"    : "[length(parameters('Subnets'))]",
             "mode"     : "Serial"
            },
            "condition" : "[parameters('Subnets')[copyIndex('Subnets')].subnetCondition]",
            "name"      : "[concat(parameters('VNet_Name'),'/',parameters('Subnets')[copyIndex('Subnets')].subnetName)]",
            "properties":
            {
                "addressPrefix"      : "[parameters('Subnets')[copyIndex('Subnets')].subnetAddressPrefix]"
            }
        },
        {
            "type"      : "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "copy"       : 
            {
                "name"      : "VM",
                "count"     : "[length(parameters('Subnets'))]",
                "mode"      : "Serial"
            },
            "name"      : "[parameters('Subnets')[copyIndex('VM')].subnetName]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('VNet_Name'), parameters('Subnets')[copyIndex('VM')].subnetName)]"
            ],
            "properties": 
            {
                "mode"  : "Incremental",
                "parameters": 
                {
                    "subnetName": {
                        "value": "[parameters('Subnets')[copyIndex('VM')].subnetName]"
                    },
                    "vnetName": {
                        "value": "[parameters('VNet_Name')]"
                    },
                    "virtualmachine": {
                        "value": "[parameters('Subnets')[copyIndex('VM')].virtualmachine]"
                    }
                },
                "templateLink": 
                {
                    "uri": "https://raw.githubusercontent.com/manan-manik/ARMcicd/main/vmTemplate3tf.json",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type"      : "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "copy"       : 
            {
                "name"      : "Firewall",
                "count"     : "[length(parameters('Subnets'))]",
                "mode"      : "Serial"
            },
            "name"      : "[concat(parameters('Subnets')[copyIndex('Firewall')].subnetName, '-firewall')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('VNet_Name'), parameters('Subnets')[copyIndex('Firewall')].subnetName)]"
            ],
            "properties": 
            {
                "mode"  : "Incremental",
                "parameters": 
                {
                    "subnetName": {
                        "value": "[parameters('Subnets')[copyIndex('Firewall')].subnetName]"
                    },
                    "vnetName": {
                        "value": "[parameters('VNet_Name')]"
                    },
                    "firewall": {
                        "value": "[parameters('Subnets')[copyIndex('Firewall')].firewall]"
                    }
                },
                "templateLink": 
                {
                    "uri": "https://raw.githubusercontent.com/manan-manik/ARMcicd/main/firewall.json",
                    "contentVersion": "1.0.0.0"
                }
            }
        }
    ],
    "outputs": {}
}
