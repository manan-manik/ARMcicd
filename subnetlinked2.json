{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VNet_Name": {
            "type": "String"
        },
        "Subnets": {
            "type": "array"
        }
    },
    "variables": {},
    "resources": [
        {
            "type"      : "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-11-01",
            "copy"      : 
            {
             "name"     : "Subnets",
             "count"    : "[length(parameters('Subnets'))]",
             "mode"     : "Serial"
            },
            "name"      : "[concat(parameters('VNet_Name'),'/',parameters('Subnets')[copyIndex('Subnets')].subnetName)]",
            "properties":
            {
                "addressPrefix"      : "[parameters('Subnets')[copyIndex('Subnets').subnetAddressPrefix]]"
            }
        }
    ],
    "outputs": {}
}
